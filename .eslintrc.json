{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": ["react-app", "prettier"],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "plugins": ["react", "prettier"],
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 100,
                "trailingComma": "es5",
                "useTabs": true,
                "tabWidth": 2,
                "semi": true,
                "singleQuote": true,
                "bracketSpacing": true,
                "jsxBracketSameLine": true,
                "arrowParens": "avoid",
                "endOfLine": "auto" 
            }
        ]
    }
}
